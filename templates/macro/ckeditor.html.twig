{% macro ckeditor_basic(selector) %}
    <!--suppress JSUnresolvedReference -->
    <script src="{{ asset('bundles/commonui/plugins/custom/ckeditor/ckeditor-classic.bundle.js') }}"></script>
    <script>
        const $el = document.querySelector('{{ selector }}');
        if ($el) {
            ClassicEditor
                .create($el, {
                    toolbar: {
                        items: [
                            'undo', 'redo', '|',
                            'heading', '|',
                            'bold', 'italic', 'link', 'bulletedList', 'blockQuote',
                        ]
                    },
                })
                .then(editor => {
                    console.log(editor);
                })
                .catch(error => {
                    console.error(error);
                });
        }
    </script>
{% endmacro %}
