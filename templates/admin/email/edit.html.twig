{% extends '@CommonUiBundle/admin/layout/admin.html.twig' %}
{% form_theme form '@CommonUiBundle/admin/forms/form-narrow.html.twig' %}
{% import '@CommonUiBundle/admin/macros/content-editor.html.twig' as content_editor %}

{% block content %}
    <div class="app-container container">
        <div class="{{ theme.default.card_class }}">
            <div class="{{ theme.default.card_header_class }}">
                <h2 class="mb-0">
                    Editace šablony
                </h2>
            </div>

            <div class="card-body">
                {{ block('edit_form') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block edit_form %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-12">
            {{ form_row(form.name) }}
        </div>
        <div class="col-12">
            {{ form_row(form.subject) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.fromEmail) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.fromName) }}
        </div>
        <div class="col-12">
            {% if variables is defined and variables is not empty %}
                <div class="
                        alert alert-dismissible bg-light-primary border border-primary border-dashed
                        text-gray
                    ">
                    Proměnné:
                    <div>
                        {% for v in variables %}
                            <code class="me-1 mb-1">{{ '{' ~ v ~ '}' }}</code>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="col-12">
            {{ form_row(form.body) }}
        </div>

        <div class="col-12">
            {% if form._token is defined %}
                {{ form_row(form._token) }}
            {% endif %}
            {% if form.save is defined %}
                {{ form_row(form.save) }}
            {% endif %}
        </div>
    </div>
    {{ form_end(form, {'render_rest': false}) }}

    {{ content_editor.content_editor_basic('#email_body') }}
{% endblock %}
